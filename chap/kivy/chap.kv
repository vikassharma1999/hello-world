#this is a kv file the root widget is Home
Home:
<Home>:
    orientation:"vertical"
    BoxLayout:
        size_hint_y:None
        height:"40dp"
        Label:
            text:"NO GAP ONLY CHAP"
    BoxLayout:

        Button:
            text:"Guest"
            on_press:root.hello()

        Button:
            text:"Student"
        Button:
            text:"Faculty"
    BoxLayout:
        Label:
            text:"hello"
<ChatLabel@Label>:    
    text_size: (self.width, None) 
    color: 0,0,0,1
    halign: 'left'    
    valign: 'top'    
    size_hint: (1, None) 
    height: self.texture_size[1]

<GuestLayout>:
    BoxLayout:
        orientation: 'vertical'
        usr_input:message
    ScrollView:    
        canvas.before:  
            Color:         
                rgb: 1, 1, 1      
            Rectangle:           
                pos: self.pos         
                size: self.size        
        ChatLabel:         
            id: chat_logs              
            text: ""        
    BoxLayout:          
        height: 40         
        orientation: 'horizontal'            
        padding: 0          
        size_hint: (1, None)      
        TextInput:                
            id: message   
            on_text_validate: root.send_msg() 
            multiline:False        
        Button:               
            text: 'Send'        
            size_hint: (0.3, 1)
            on_press: root.send_msg()


    